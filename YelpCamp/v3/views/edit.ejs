<% include partials/header %>

<div class="container">

  <header class="jumbotron">
    <div class="container">
      <h1 style="text-align: center">Create a New Campground</h1>
      <p style="text-align: center">Enter the name and url of the campground you would like to add</p>
    </div>
  </header>


  <div style="width: 30%; margin: 25px auto;">
              <form action="/campgrounds/<%= editCamp._id %>?_method=PUT" method="POST">
                  <div class="form-group">
                      <textarea class="form-control" name="camp[name]" rows="1" placeholder="Enter Name"><%= editCamp.name %></textarea>
                  </div>
                  <div class="form-group">
                      <textarea class="form-control" name="camp[image]" rows="2" placeholder="Image URL"><%= editCamp.image %></textarea>
                  </div>
                  <div class="form-group">
                      <textarea class="form-control" name="camp[description]" rows="5" placeholder="Enter description"><%= editCamp.description %></textarea>
                  </div>
                  <div class="form-group">
                      <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                  </div>
              </form>
   </div>



  <a href="/campgrounds">Go Back</a>

<% include partials/footer %>
</div>
