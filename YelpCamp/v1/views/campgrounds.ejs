<% include partials/header %>

  <nav class="navbar navbar-default">
      <div class="container-fluid">
          <div class="navbar-header">
              <a class="navbar-brand" href="/">YelpCamp</a>
          </div>
      </div>
  </nav>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our handpicked campgrounds from all around the world for you!</p>
            <p>
                <a class="btn btn-primary btn-lg" href = "/campgrounds/new" > Create New Campground </a>
            </p>
        </div>
    </header>

    <div class="row">
      <div class="col-lg-12">
        <h3>Our most popular campgrounds!</h3>
      </div>
    </div>

    <div class="row">
      <% campgrounds.forEach(function(cg) { %>
        <div class="col-md-3 col-sm-12">
          <div class="img-thumbnail">
              <img src="<%= cg.image %>">
              <div class="caption">
                  <h4><%= cg.name %></h4>
              </div>
          </div>
        </div>
      <% }); %>
    </div>

    <div>
      <a href = "/" >Go Back</a>
    </div>

</div>
<% include partials/footer %>
