extends layout

block content
  h2.page-header Login
  p Please Login
  form(method='post', action='/users/login', enctype='multipart/form-data')
    .form-group
     label Username
     input.form-control(name='username', type='text', placeholder='Enter Username')
    .form-group
     label Password
     input.form-control(name='password', type='text', placeholder='Enter Password')
    input.btn.btn-primary(type='submit', name='submit', value='Login')
